<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="HospitalManagement.Views.CashBook"
             xmlns:custom="clr-namespace:HospitalManagement">
    <StackLayout>
        <ScrollView>
            <StackLayout Orientation="Vertical" Padding="10">
                <StackLayout Orientation="Horizontal">
                    <DatePicker/>
                    <Picker Title="Choose Patient" SelectedIndexChanged="PatientSelector_SelectedIndexChanged" x:Name="PatientListPicker" HorizontalOptions="EndAndExpand"/>                    
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <custom:CustomEntry Placeholder="Amount" Keyboard="Numeric" x:Name="PaidAmount" WidthRequest="100"/>
                    <Button Text="Submit" Clicked="AddPayment" HorizontalOptions="EndAndExpand"/>
                </StackLayout>                

                <StackLayout Orientation="Horizontal" Margin="0,10">
                    <Label FontSize="16" x:Name="TransactionTitle"/>
                    <Label x:Name="TotalIncome" HorizontalOptions="EndAndExpand"/>
                </StackLayout>
                
                <Grid BackgroundColor="#50B1FF" Padding="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>                        
                    </Grid.ColumnDefinitions>
                    <Label Text="Date" TextColor="White" FontSize="20" VerticalTextAlignment="Center" HorizontalTextAlignment="Start" FontAttributes="Bold" Grid.Column="0" Grid.Row="0"/>
                    <Label Text="Name" TextColor="White"  FontSize="20" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FontAttributes="Bold" Grid.Column="1" Grid.Row="0"/>
                    <Label Text="Amount"  TextColor="White"  FontSize="20"  VerticalTextAlignment="Center" HorizontalTextAlignment="End" FontAttributes="Bold" Grid.Column="2" Grid.Row="0"/>                    
                </Grid>
                <ListView x:Name="patientTransctionListView" SeparatorColor="#AFDCFF" HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid Padding="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>                                    
                                </Grid.ColumnDefinitions>
                                <Label Text="{Binding Date, StringFormat='{0:dd-MMM-yy}'}" FontSize="18" VerticalTextAlignment="Start" HorizontalTextAlignment="Start"  Grid.Column="0"/>
                                <Label Text="{Binding PatientName}" VerticalTextAlignment="Center" FontSize="18" HorizontalTextAlignment="Center"  Grid.Column="1"/>                                                                
                                <Label Text="{Binding PaidAmount}" VerticalTextAlignment="Center" FontSize="18" HorizontalTextAlignment="End" Grid.Column="2"/>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            </StackLayout>
        </ScrollView>
    </StackLayout>
</ContentPage>